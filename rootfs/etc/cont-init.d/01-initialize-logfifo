#!/usr/bin/execlineb -P

# wait to fdholderd
if { s6-svwait -U /var/run/s6/services/s6-fdholderd }


# initialize fifo and put it inside fdholderd
if { s6-rmrf /var/run/s6/feeder-error-log-fifo }
if { s6-mkfifo -m 0600 -- /var/run/s6/feeder-error-log-fifo }
if
{
  redirfd -rnb 0 /var/run/s6/feeder-error-log-fifo
  s6-fdholder-store /var/run/s6/fdholderd-socket fifo:feeder-error-log
}


# finished successfully :-)
s6-true
